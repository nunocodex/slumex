{
    "name": "nunocodex/slumex",
    "type": "project",
    "license": "MIT",
    "authors": [{
        "name": "Ricardo Pereira",
        "email": "nunocodex@gmail.com"
    }],
    "require": {
        "pimple/pimple": "^3.2",
        "vlucas/phpdotenv": "^3.3",
        "hassankhan/config": "^2.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^4.2",
        "symfony/console": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "NunoCodex\\Slumex\\": "src/"
        },
        "files": [
            "helpers.php"
        ]
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --coverage-html coverage",
        "var-dumper-server": "php vendor/symfony/var-dumper/Resources/bin/var-dump-server"
    },
    "config": {
        "process-timeout": 0
    }
}
